<layout>
    <adminhtml_sales_order_index>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>coolrunner/js/coolrunner.js</name><params/></action>
			<action method="addItem"><type>skin_css</type><name>coolrunner/css/styles.css</name><params/></action>
		</reference>
		<reference name="before_body_end">
			<block type="core/template" name="coolrunner.sales.order.grid.script" template="coolrunner/sales/order/script.phtml" />
			<block type="coolrunner/adminhtml_form_form" name="coolrunner.sales.order.grid.form" template="coolrunner/sales/order/form/form.phtml" />
		</reference>
    </adminhtml_sales_order_index>
    <adminhtml_sales_order_view>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>coolrunner/js/coolrunner.js</name><params/></action>
			<action method="addItem"><type>skin_css</type><name>coolrunner/css/styles.css</name><params/></action>
		</reference>
		<reference name="before_body_end">
			<block type="core/template" name="coolrunner.sales.order.view.script" template="coolrunner/sales/order/script.phtml" />
			<block type="coolrunner/adminhtml_form_form" name="coolrunner.sales.order.view.form" template="coolrunner/sales/order/form/form.phtml" />
		</reference>
    </adminhtml_sales_order_view>
    <adminhtml_system_config_edit>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>coolrunner/css/styles.css</name><params/></action>
		</reference>
		<reference name="before_body_end">
            <block type="core/template" name="coolrunner.sortable" template="coolrunner/system/config/sortable.phtml"/>
        </reference>
    </adminhtml_system_config_edit> 
</layout>
