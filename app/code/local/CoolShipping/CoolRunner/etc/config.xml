<?xml version="1.0"?>
<config>
    <modules>
        <CoolShipping_CoolRunner>
            <version>0.1.0</version>
            <name>CoolRunner</name>
        </CoolShipping_CoolRunner>
    </modules>
    <global>
        <blocks>
            <coolrunner>
                <class>CoolShipping_CoolRunner_Block</class>
            </coolrunner>
        </blocks>
        <helpers>
            <coolrunner>
                <class>CoolShipping_CoolRunner_Helper</class>
            </coolrunner>
        </helpers>
        <models>
            <coolrunner>
                <class>CoolShipping_CoolRunner_Model</class>
                <resourceModel>coolrunner_resource</resourceModel>
            </coolrunner>
            <coolrunner_resource>
                <class>CoolShipping_CoolRunner_Model_Resource</class>
                <entities>
                    <order_pdf>
                        <table>cm_coolrunner_sales_order_pdf</table>
                    </order_pdf>
                </entities>
            </coolrunner_resource>
        </models>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <coolrunner_core_block_abstract_prepare_layout_before>
                        <class>coolrunner/observer</class>
                        <method>addMassAction</method>
                    </coolrunner_core_block_abstract_prepare_layout_before>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <coolrunner_save_quote_data>
                        <type>singleton</type>
                        <class>CoolShipping_CoolRunner_Model_Observer</class>
                        <method>saveQuoteData</method>
                    </coolrunner_save_quote_data>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <gomage_checkout_save_quote_before>
                <observers>
                    <coolrunner_save_quote_data>
                        <type>singleton</type>
                        <class>CoolShipping_CoolRunner_Model_Observer</class>
                        <method>saveQuoteData</method>
                    </coolrunner_save_quote_data>
                </observers>
            </gomage_checkout_save_quote_before>
            <sales_model_service_quote_submit_after>
                <observers>
                    <coolrunner_save_data_on_order>
                        <type>singleton</type>
                        <class>CoolShipping_CoolRunner_Model_Observer</class>
                        <method>saveDataOnOrder</method>
                    </coolrunner_save_data_on_order>
                </observers>
            </sales_model_service_quote_submit_after>
        </events>
        <resources>
            <coolrunner_setup>
                <setup>
                    <module>CoolShipping_CoolRunner</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </coolrunner_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <coolrunner module="CoolShipping_CoolRunner">
                    <file>coolrunner.xml</file>
                </coolrunner>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <coolrunner_append_droppoint_html>
                        <type>singleton</type>
                        <class>CoolShipping_CoolRunner_Model_Observer</class>
                        <method>appendDroppointHtml</method>
                    </coolrunner_append_droppoint_html>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <translate>
            <modules>
                <CoolShipping_CoolRunner>
                    <files>
                        <default>CoolShipping_CoolRunner.csv</default>
                    </files>
                </CoolShipping_CoolRunner>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <coolrunner>
                            <title>CoolRunner</title>
                        </coolrunner>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <coolrunner>
                                            <title>Behandling af ordrer</title>
                                        </coolrunner>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <coolrunner>
                    <file>coolrunner.xml</file>
                </coolrunner>
            </updates>
        </layout>
        <translate>
            <modules>
                <CoolShipping_CoolRunner>
                    <files>
                        <default>CoolShipping_CoolRunner</default>
                    </files>
                </CoolShipping_CoolRunner>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <coolrunner>
                <use>admin</use>
                <args>
                    <module>CoolShipping_CoolRunner</module>
                    <frontName>coolrunner</frontName>
                </args>
            </coolrunner>
        </routers>
    </admin>
    <default>
        <coolrunner>
            <settings>
                <download>1</download>
                <print_size>A4</print_size>
            </settings>
        </coolrunner>
        <carriers>
            <coolrunner_dao>
                <active>1</active>
                <model>coolrunner/carrier_dao</model>
                <title>DAO</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_dao>
            <coolrunner_pdk>
                <active>1</active>
                <model>coolrunner/carrier_pdk</model>
                <title>Post Danmark</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_pdk>
            <coolrunner_gls>
                <active>1</active>
                <model>coolrunner/carrier_gls</model>
                <title>GLS</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_gls>
            <coolrunner_dhl>
                <active>1</active>
                <model>coolrunner/carrier_dhl</model>
                <title>DHL</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_dhl>
            <coolrunner_coolrunner>
                <active>1</active>
                <model>coolrunner/carrier_coolrunner</model>
                <title>Coolrunner</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_coolrunner>
            <coolrunner_posti>
                <active>1</active>
                <model>coolrunner/carrier_posti</model>
                <title>Posti</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </coolrunner_posti>
        </carriers>
    </default>
</config>